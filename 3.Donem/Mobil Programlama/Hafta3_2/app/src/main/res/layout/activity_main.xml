<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/yazi"
        android:layout_width="245dp"
        android:layout_height="151dp"
        android:layout_marginTop="105dp"
        android:hint="Lütfen Cinsiyesinizi Seçiniz"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/Kadin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="48dp"
        android:text="Kadın"
        app:layout_constraintStart_toEndOf="@+id/Erkek"
        app:layout_constraintTop_toBottomOf="@+id/yazi" />

    <CheckBox
        android:id="@+id/Erkek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:text="Erkek"
        app:layout_constraintBaseline_toBaselineOf="@+id/Kadin"
        app:layout_constraintStart_toStartOf="@+id/yazi" />
</androidx.constraintlayout.widget.ConstraintLayout>